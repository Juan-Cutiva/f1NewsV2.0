---
import LiHeader from '@/components/header/LiHeader.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const HEADER = [
	{
		id: 1,
		text: 'drivers'
	},
	{
		id: 2,
		text: 'teams'
	},
	{
		id: 3,
		text: 'chamTeam'
	},
	{
		id: 4,
		text: 'chamDriver'
	}
];

const first = HEADER.slice(0, 2);
const second = HEADER.slice(2);
---

<header class="flex h-fit w-full items-center justify-center bg-purple-500">
	<ul class="flex h-10 w-[80%]">
		{
			first.map((item) => (
				<LiHeader
					href={t(`header.${item.text}` as 'header.drivers' | 'header.teams')}
					text={t(`header.${item.text}` as 'header.drivers' | 'header.teams')}
				/>
			))
		}

		<a href={getRelativeLocaleUrl(lang, '/')} class="flex w-full items-center justify-center"
			>{t('header.home')}</a
		>
		{
			second.map((item) => (
				<LiHeader
					href={t(`header.${item.text}` as 'header.drivers' | 'header.teams')}
					text={t(`header.${item.text}` as 'header.drivers' | 'header.teams')}
				/>
			))
		}
	</ul>
</header>
