---
import Header from '@/sections/global/Header.astro';
import Footer from '@/sections/global/Footer.astro';

import '@/styles/global.css';
import '@fontsource-variable/dm-sans';

import { getLangFromUrl } from '@/i18n/utils';
import { ClientRouter } from 'astro:transitions';
const lang = getLangFromUrl(Astro.url);

interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="LayoutPage, follow" />
		<meta
			name="description"
			content="En este web puedes ver como va el campeonato de pilotos, de constructores y también ver a los pilotos eh escuderías."
		/>
		<meta name="og:site" content="@F1NewsV2.0" />
		<meta name="og:creator" content="@Juan.Cutiva_" />
		<meta name="og:title" content="F1News" />
		<meta
			name="og:description"
			content="En este web puedes ver como va el campeonato de pilotos, de constructores y también ver a los pilotos eh escuderías."
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<title>F1 News | {title}</title>
		<ClientRouter />
	</head>
	<body class="font-dm w-full">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
