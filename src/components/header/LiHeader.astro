---
interface Props {
	href: string;
	text: string;
}

const { href, text } = Astro.props;

import { getLangFromUrl } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const lang = getLangFromUrl(Astro.url);

// Reemplazar espacios por guiones
const sanitizedHref = href ? href.toLocaleLowerCase().replace(/\s+/g, '-') : '';
---

<li class="flex w-full items-center justify-center bg-amber-300 px-3 py-1.5">
	<a href={`${getRelativeLocaleUrl(lang, '/')}${sanitizedHref}`}>{text}</a>
</li>
