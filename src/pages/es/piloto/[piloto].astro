---
import Layout from '@/layouts/Layout.astro';

export const prerender = false;

const pages = [
	{
		slug: 'max-verstapen',
		title: 'Max Verstapen',
		text: 'Max Verstapen El mejor piloto'
	},
	{
		slug: 'yuki-tsunoda',
		title: 'Yuki Tsunoda',
		text: 'Yuki Tsunoda CompaÃ±ero de Max Verstapen'
	}
];

const { piloto } = Astro.params;
const page = pages.find((page) => page.slug === piloto);
if (!page) return Astro.redirect('/404');
const { title, text } = page;
---

<Layout title={title}>
	<h1>{title}</h1>
	<h1>{text}</h1>
</Layout>
